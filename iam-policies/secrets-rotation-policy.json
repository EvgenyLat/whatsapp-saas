{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowSecretRotation",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:DescribeSecret",
        "secretsmanager:GetSecretValue",
        "secretsmanager:PutSecretValue",
        "secretsmanager:UpdateSecretVersionStage"
      ],
      "Resource": [
        "arn:aws:secretsmanager:*:*:secret:whatsapp-saas/mvp/admin-token-*",
        "arn:aws:secretsmanager:*:*:secret:whatsapp-saas/mvp/meta-*"
      ]
    },
    {
      "Sid": "AllowLambdaInvocationForRotation",
      "Effect": "Allow",
      "Action": [
        "lambda:InvokeFunction"
      ],
      "Resource": [
        "arn:aws:lambda:*:*:function:whatsapp-saas-rotate-*"
      ]
    },
    {
      "Sid": "DenyRotationOfDatabaseSecrets",
      "Effect": "Deny",
      "Action": [
        "secretsmanager:RotateSecret"
      ],
      "Resource": [
        "arn:aws:secretsmanager:*:*:secret:whatsapp-saas/*/database-*",
        "arn:aws:secretsmanager:*:*:secret:whatsapp-saas/*/redis-*"
      ]
    }
  ]
}
