# Frontend Environment Variables Example
# Copy this file to .env.local and update with your values

# API Configuration
# Backend API runs on port 3000, Frontend on port 3001
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_API_TIMEOUT=30000

# App Configuration
NEXT_PUBLIC_APP_NAME=WhatsApp SaaS Platform
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false

# Optional: Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Optional: Error Tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Optional: Feature Flags
# NEXT_PUBLIC_ENABLE_WHATSAPP_TEMPLATES=true
# NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=true
# NEXT_PUBLIC_ENABLE_BULK_MESSAGING=true
