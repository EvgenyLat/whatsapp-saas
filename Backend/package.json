{
	"name": "whatsapp-saas-starter",
	"version": "0.1.0",
	"description": "Minimal starter for WhatsApp Cloud API booking SaaS (test-ready)",
	"main": "index.js",
	"type": "commonjs",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:integration": "jest --config jest.integration.config.js",
		"test:integration:watch": "jest --config jest.integration.config.js --watch",
		"test:integration:cov": "jest --config jest.integration.config.js --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"test:security": "echo 'Security tests placeholder' && exit 0",
		"test:owasp": "echo 'OWASP tests placeholder' && exit 0",
		"migrate": "npx prisma migrate deploy",
		"seed:test": "npx prisma db seed",
		"prisma:generate": "prisma generate",
		"prisma:migrate": "prisma migrate dev",
		"prisma:migrate:deploy": "prisma migrate deploy",
		"prisma:studio": "prisma studio",
		"prisma:seed": "ts-node prisma/seed.ts",
		"db:seed": "ts-node prisma/seed.ts",
		"db:reset": "prisma migrate reset --force && npm run prisma:seed"
	},
	"dependencies": {
		"@aws-sdk/client-secrets-manager": "^3.490.0",
		"@bull-board/api": "^6.14.0",
		"@bull-board/express": "^6.14.0",
		"@bull-board/nestjs": "^6.14.0",
		"@nestjs/axios": "^4.0.1",
		"@nestjs/bullmq": "^11.0.4",
		"@nestjs/cache-manager": "^3.0.1",
		"@nestjs/common": "^10.4.20",
		"@nestjs/config": "^3.3.0",
		"@nestjs/core": "^10.4.20",
		"@nestjs/jwt": "^10.2.0",
		"@nestjs/passport": "^10.0.3",
		"@nestjs/platform-express": "^10.4.20",
		"@nestjs/swagger": "^7.4.2",
		"@nestjs/throttler": "^5.2.0",
		"@prisma/client": "^5.7.1",
		"axios": "^1.12.2",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.20.2",
		"bullmq": "^4.15.4",
		"cache-manager": "^7.2.4",
		"cache-manager-redis-store": "^3.0.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"compression": "^1.8.1",
		"cors": "^2.8.5",
		"date-fns": "^3.6.0",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"express-rate-limit": "^7.1.5",
		"helmet": "^7.2.0",
		"ioredis": "^5.8.2",
		"joi": "^17.11.0",
		"node-fetch": "^2.6.12",
		"openai": "^4.20.1",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.1",
		"prisma": "^5.7.1",
		"rate-limit-redis": "^4.2.0",
		"redis": "^4.6.10",
		"reflect-metadata": "^0.1.14",
		"rxjs": "^7.8.2",
		"uuid": "^9.0.1",
		"winston": "^3.11.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^11.0.10",
		"@nestjs/schematics": "^11.0.9",
		"@nestjs/testing": "^10.4.20",
		"@types/bcryptjs": "^2.4.6",
		"@types/compression": "^1.8.1",
		"@types/express": "^5.0.3",
